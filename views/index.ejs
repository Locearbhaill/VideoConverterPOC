          <div class="card-body" style="white-space: pre; text-align: center;"> -->
            <!-- The style part above fixes the \n rendering issue -->
            <!-- <a><%= fileNameDisplay %></a>
            <a><%= validationData %></a>
          </div>
        </div> -->

      </form>

      <form action="/videofilter" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="effect">Video Effect:</label>
          <select class="form-control" name="effect" >
            <option>Select an Effect</option>
            <option>Horizontal Flip(Left-Right)</option>
            <option>Vertical Flip(Top-Bottom)</option>
            <option>Copy Video</option>
            <option>Directional Blur</option>
            <option>Stabilise Video</option>
            <option>Erosion Effect</option>
            <option>Fill Borders</option>
            <option>Gaussian Blur</option>
            <option>Add Noise</option>

          </select>

          </select>
        </div>
        <br />
        <div class="form-group">
          <button class="btn btn-info btn-block">
            Apply Video Effect
          </button>
        </div>
      </form>
      <form action="/audiofilter" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="effect">Audio Effect:</label>
          <select class="form-control" name="effect">
            <option>Select an Effect</option>
            <option>Fade in and out</option>
            <option>Echo</option>
            <option>Reverse Audio</option>
            <option>Bass Boost(subwoof frequency boost)</option>
            <option>Crossfeed (headphone crossfeed filter)</option>
            <option>Normalise</option>


          </select>

          </select>
        </div>
        <br />
        <div class="form-group">
          <button class="btn btn-info btn-block">
            Apply Audio Effect
          </button>
        </div>
      </form>
      <div class="card">
        <div class="card-body" style="white-space: pre; text-align: center;">
          <!-- The style part above fixes the \n rendering issue -->
          <!-- <a><%= fileNameDisplay %></a>
          <a><%= validationData %></a> -->
        </div>
      </div>
    </div>
  </body>
