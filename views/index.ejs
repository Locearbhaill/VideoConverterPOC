      <form action="/convert" method="post" enctype="multipart/form-data">
        <!-- <div class="form-group">
          <input type="file" name="file"/>
        </div> -->
        <!-- <div class="form-group">
          <div class="input-group-prepend">
            <span class="input-group-text" name="file">@</span>
          </div>
          <input type="file" class="form-control" placeholder="Please upload">
        </div> -->
        <div class="form-group">
          <label for="to">To Format:</label>
          <select class="form-control" name="to">
            <option>mp4</option>
            <option>avi</option>
            <option>webm</option>
            <option>mov</option>
            <option>wmv</option>
            <option>3gp</option>
            <option>f4v</option>
          </select>
          <label for="toRes">To Resolution:</label>
          <select class="form-control" name="toRes">
            <option>No Resolution change</option>
            <option>320x200</option>
            <option>640x480</option>
            <option>1280x720</option>
            <option>1920x1080</option>
            <!-- <option>Validate</option> -->
            <option>proof</option>
            <option>of</option>
            <option>concept</option>
          </select>
        </div>
        <br />
        <div class="card">
          <div class="card-body">
            <img src="./fragments/Video-Placeholder.jpg" alt="Preview gif for uploaded video" style="text-align: center;"></img>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-block">
            Convert
          </button>
        </div>
      </form>
      <form action="/filters" method="post" enctype="multipart/form-data">
        <button class="btn btn-info btn-block">
          Display filters
        </button>
      </form>
      <br />
      <!-- This code snippet above was used to Display filters. -->
      <form action="/validate" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <!-- <br /><br /> -->
          <!-- <input type="file" name="file"/> -->
          <!-- <br /><br /> -->
          <button class="btn btn-info btn-block">
            Validate
          </button>
        </div>
